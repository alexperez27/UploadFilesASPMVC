@model IEnumerable<WebApplication1.Models.Atleta>

@{
    ViewBag.Title = "Todos";
    string DownloadFileUrl = ViewBag.DownloadFileUrl as string;
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RutaImagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mimetype)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tamnio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@(DownloadFileUrl + item.RutaImagen)" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mimetype)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tamnio)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
